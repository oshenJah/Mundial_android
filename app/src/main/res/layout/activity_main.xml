<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/texto_cuartos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/lienzo_1"
        android:layout_width="409dp"
        android:layout_height="150dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="0dp"
        android:background="#4F848C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/texto_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="40sp"
            android:fontFamily="serif"
            android:text="Bienvenido" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/lienzo_2"
        android:layout_width="409dp"
        android:layout_height="579dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lienzo_1">

        <ImageView



            android:id="@+id/copa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:contentDescription="imagen de la copa mundial"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/copa"/>

        <Button
            android:id="@+id/boton_1"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="Registrar Mundial" />

        <Button
            android:id="@+id/boton_2"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="200dp"
            android:text="Historial Mundiales" />

        <Button
            android:id="@+id/boton_3"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="200dp"
            android:text="PalmarÃ©s" />


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>